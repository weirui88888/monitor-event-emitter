{
  "name": "pretty-event-emitter",
  "version": "1.0.0",
  "description": "A lightweight event monitoring processor",
  "main": "lib/bundle.cjs.js",
  "module": "lib/bundle.esm.js",
  "browser": "lib/bundle.browser.js",
  "types": "types/index.d.ts",
  "files": [
    "src",
    "types",
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:type": "tsc",
    "test": "jest --coverage --config jest.config.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/weirui88888/pretty-event-emitter.git"
  },
  "keywords": [
    "event",
    "emitter",
    "typescript",
    "watcher"
  ],
  "author": "ruiwei88888@163.com",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "codecov": "^3.8.3",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "rollup": "^2.45.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "npx --no-install commitlint --edit $1"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint src --fix --ext .ts"
    ]
  }
}
